  # <%= @title %>
<% if @conditions.nil? -%>
  <%=  @action -%>
<% else -%>
<%  printacl=@action -%>
<%  @conditions.each do |option,value| -%>
<%   if value.nil? -%>
<%=   "  %-7s %s\n" % [printacl,option] -%>
<%   else -%>
<%=   "  %-7s %-13s = %s\n" % [printacl,option,value.join(" : ")] %><% printacl="" -%>
<%   end -%>
<%  end -%>
<% end -%>

